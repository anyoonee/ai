package javaBasic1204.ch04.sec02;

public class while문연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//246810 출력
		
		int a = 2;
		/*
		while (a<10) {
			a=a+2;
			System.out.println(a);
		}
		*/
		while(a<=10) {
			System.out.println(a);
			a=a+2;
		}
		/*
		do {
			//반복할 내용
		}while(조건식);
		*/
		
		int n2 =1;
		do {
			System.out.println(n2);
			n2+=2;
		}while(n2 <=10);
		
		
		// 10 9 ... 1
		
		int n3=10;
		do {
			System.out.println(n3);
			--n3;
			
		}while(n3 >= 1);
		
		// 5 10 ... 100
		
		int n4=5;
		do {
			System.out.println(n4);
			n4 +=5;
			
		}while(n4<=100);
		
		/*for문
		형식
		   for (초기값; 조건식; 증가값){
		   		반복할 내용들
		   		};
		   		
		   */		
		
		// 123 .. 10
		
		for(int a1=1; a1<=10 ; a1++) {
			System.out.println(a1);
		}
		
		//1~50
		for(int a2=1; a2<=50; a2++) {
			System.out.println(a2);
		}
		//50~1
		for(int a3=50; a3>=1; a3--) {
			System.out.println(a3);
		}
		
		//변수 2개를 이용해서 1~10 10~19
		for(int i=1, k=10; i<=10 || k<=19; i++, k++) {
			System.out.println(i + " " + k);
		}
		
		
	
		
	}

}
