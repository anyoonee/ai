		double monthlypayment1 = (double) installment1/repaymentperiod1;
		
		System.out.println(verhicleName1 + " " + verhicletotalamount1 + " " + deliverymoney1 + "  " + installment1 + "  " + repaymentperiod1 + "  " + monthlypayment1 );
		
		String verhicleName2 = "코란다";
