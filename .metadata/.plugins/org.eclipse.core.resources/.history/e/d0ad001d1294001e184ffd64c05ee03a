package javaBasic2.ch05.sec03;

public class 배열연습 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 배열 : 동일한 자료들의 집합, 연속해서 저장되어 있다.
		// 배열 쓰는 이유 정수 100개를 기억해야한다면 변수 100개를 만들어야해서 배열로 선언
		// 배열 만드는 방법 - 1,2,3차원
		
		int [] arr = new int[] {1,2,3,4,5};
		String[] sArr = new String[] {"a","b"};
		double[] dArr = new double[] {1.1, 2.2, 3.3};
		boolean[] bArr = new boolean[] {true, false};
		
		byte[] byteArr= new byte[] {1,2,3};
		short[] shortArr= new short[] {6,7};
		float[] floatArr= new float[] {1.1f, 2.2f};
		
		//arr배열의 [0]의 값 1을 출력하려면
		System.out.println(arr[0]);
		//b를 출력하기
		System.out.println(sArr[1]);
		//3.3
		System.out.println(dArr[2]);
		
		//arr배열의 [0]의 값 1을 10으로 변경
		arr[0] = 10;
		
		//방법2) 빈배열을 만들고 나중에 값을 넣기
		int[] intArr = new int[3];
		double[] doubleArr2 = new double[5];
		
		intArr[0] =3;
		intArr[1] =5;
		intArr[2] =7;
		
		// 문자열 4개를 넣는 배열 만들기
		// 내용은 "a","b","c","d"로 넣어주기
		String[] stringArr2 = new String[4];
		stringArr2[0] = "a";
		stringArr2[1] = "b";
		stringArr2[3] = "c";
		
		
		int[] intArr3 = new int[100];
		for(int i=0; i<100; i++ ) {
			intArr3[i]= i+1;
		}
		for(int i=0; i<100; i++) {
			System.out.println(intArr3[i]);
		}
		
		 //변수선언으로 스택 주소
		int[] intArr10 = null; //null문자 = 미지정
		
		int[] score = new int[] {100,90,87,90,100};
		//p.166
		int sum=0;
		for(int i=0; i<5; i++) {
			sum += score[i];
		};
		
		int avg = sum/5;
		System.out.println("합계는" + sum);
		System.out.println("평균은" + avg);
		
		//배열의 길이 배열명.length
		System.out.println(score.length);
		/*
		score[5]=60;
		score[6]=90;
		*/
		
		String[] season = {"String", "Summer", "Fall", "Winter"};
		
		System.out.println("season[0]" + season[0]);
		System.out.println("season[1]" + season[1]);
		System.out.println("season[2]" + season[2]);
		System.out.println("season[3]" + season[3]);
		
		season[1] = "여름";
		System.out.println("season[1] :" + season[1]);
		System.out.println();
		
		int[] scores = { 83, 90, 87};
		
		int sum1 =0;
		for(int i=0; i<3; i++) {
			sum1 += scores[i];
		}
		System.out.println("총합 : " + sum1);
		double avg1 = (double) sum1 /3;
		System.out.println("평균 :" + avg1);
		
		
		//171
		String[] names = new String[30];
		System.out.println(names.length);

		// 성적표 만들기
		// 이름 점수
		// 홍길동 100
		// 김수진 90
		// 이경주 85
		//1차원
		System.out.println("성적표");
		String[] names2 = {"홍길동", "김수진", "이경주"};
		int[] score2 = {100, 90, 85};
		
		for(int i=0; i<names2.length; i++) {
			System.out.println(names2[i] + " " + score2[i]);
		}
		
		//자동차 판매현황을 배열에 넣어서 출력하기
		System.out.println("자동차 판매 현황");
		System.out.println("  차량명  " + "  차량총액  " + "  인도금  " + "  할부원금  " + "  상환기간(월)  " + "  월납입금  ");
		String[] name3 = {"싼타페","코란다"};
		 
		
		// 대출정보
		System.out.println("  성명  " + " 대출종류  " + "  대출금액  " + "  기간(월)  ");
		String[] 성명 = { "  이민주  ", "  남지철  ", "  김춘복  ","  민애라  "};
		int[] 대출금액 = { 27000000, 15000000, 15000000, 12000000};
		int[] 기간 = {48, 60, 60, 60};
	    int 대출합계 =0;
	    int 월상환액합계=0;
		
		for(int i =0; i<성명.length; i++) {
			System.out.println(성명[i] + " "+ " 주택자금대출 "+ ""+대출금액[i]+ "   "+ 기간[i] + "  "+ 대출금액[i] / 기간[i]);
			 대출합계 = 대출합계 + 대출금액[i];
			 월상환액합계 = 월상환액합계 + 대출금액[i]/기간[i];
		}
		//월상환액 = 대출금액 / 기간
		// 대출금액 합계를 구하시오. 월상환액의 합을 구하시오.
		System.out.println("대출합계는" + 대출합계);
		System.out.println("월상환합계는" + 월상환액합계);
		
		
		//
		System.out.println("  사번  " + " 이름  " + "  부서  " + " 성별  ");
		String[] 사번 = { "J0001","J0003","J0008","J0009" };
		String[] 이름 = {"홍길동","이도현", "한미우","박정진"};
		String[] 부서 = {"총무부", "영업부", "인사부", "영업부"};
		String[] 성별 = {"남","남","남","남"};
		
		for(int i=0; i<사번.length; i++) {
			System.out.println(사번[i] + " "+ 이름[i] + " "+ 부서[i]+ " "+ 성별[i]);
		}
		
		
	}

}
