		/*
		 int x =1;
		
		int y =2;
		int result = x + y;
		System.out.println(result);
		*/
		// 5명 아르바이트생 급여 개산하기
		// 1명일 경우 급여 계산하기
		// 형식 변수형태 변수명; 변수명 = 값;
		//String name1="이순신";
		String name1;
		name1="홍길동";
		int basicPay1 = 50000;
		String phonenumber1 = "010-1234-1234";
		String accountNumber1 = "국민 123-12-1234";
		String dept1 = "알바생";
		boolean sex1 = true; //남자
        double tex1 = 0.03;
        
        String name2="이순신";
		int basicPay2 = 20000;
		String phonenumber2 = "010-234-4567";
		String accountNumber2 = "우리 321-32-4321";
		String dept2 = "정직원";
		boolean sex2 = true; //남자
        double tex2 = 0.02;
        
        String name3="이경미";
		int basicPay3 = 15000;
		String phonenumber3 = "010-987-7456";
		String accountNumber3 = "신한 123-555-7878";
		String dept3 = "팀장";
		boolean sex3 = false; //남자
        double tex3 = 0.015;
        
        String name4="정현희";
		int basicPay4 = 10000;
		String phonenumber4 = "010-8744-3334";
		String accountNumber4 = "국민 555-65-8989";
		String dept4 = "사장";
		boolean sex4 = false; //여자
        double tex4 = 0.025;
        
        String name5="최수연";
      		int basicPay5 = 9800;
      		String phonenumber5 = "010-333-7777";
      		String accountNumber5 = "카카오 777-454-1231";
      		String dept5 = "비정규직";
      		boolean sex5 = false; //여자
            double tex5 = 0.015;
              
        
        System.out.println(name1 + " " + basicPay1 + " " + phonenumber1);
        System.out.println(accountNumber1 + " " + dept1 + " " + sex1 + " " + tex1);
        System.out.println(name2 + " " + basicPay2 + " " + phonenumber2);
        System.out.println(accountNumber2 + " " + dept2 + " " + sex2 + " " + tex2);
        System.out.println(name3 + " " + basicPay3 + " " + phonenumber3);
        System.out.println(accountNumber3 + " " + dept3 + " " + sex3 + " " + tex3);
        System.out.println(name4 + " " + basicPay4 + " " + phonenumber4);
        System.out.println(accountNumber4 + " " + dept4 + " " + sex4 + " " + tex4);
        System.out.println(name5 + " " + basicPay5 + " " + phonenumber5);
        System.out.println(accountNumber5 + " " + dept5 + " " + sex5 + " " + tex5);
		
        
        // 실지급액
        //1번 10시간 2번 15시간 3번 20시간 4번 25시간 5번 30시간
        //1번 10시간 일해서 10 x 50000 = 500000 x 0.03 실수령액 = 500000 - 세금
        
        int sum1 = 10 * basicPay1;
        
        // int texCal = sum1 * tex1; //500000 * 0.03 error
        double texCal1 = sum1 * tex1;
        
        double salary1 = sum1 - texCal1; 정수 - 실수
        	
        System.out.println("1번의 실수령액 : " + salary1);
	}

}
