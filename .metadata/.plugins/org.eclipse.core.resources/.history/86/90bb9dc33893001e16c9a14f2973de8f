package javaBasic1204.ch04.sec01;

public class if문 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 만약에 ~ 조건이 참이면 거짓이면
	    // 90~100 "A" 89~80 "B"
		int score = 87;
		if (score >= 90) {
			System.out.println("A");
		}
		
		if (80 <= score && score <= 89) {
			System.out.println("B");
		}
		
		//a>=10 이고 b<=20이거나 c==20이면 합격입니다. 출력하기
		
		int a=20, b=10, c=20;
		
	    if (a>=10 && b<=20 || c==20) {
	    	System.out.println("합격입니다.");
	    }
	    	
	    // d != 0 이고 e가 NaN이고 f가 거짓이면 "잘못된 코드입니다" 아니면 "휼륭한 코드입니다"
		int d=1;
		double e=10 / 0.0;
		boolean f = false;
	    if(d != 0 && Double.isNaN(e) && f == false) {
			System.out.println("잘못된 코드입니다.");
		}else {
			System.out.println("휼륭한 코드입니다.");
		}
	    
	    
	    //변수 number가 1이면 "일" 2면 "이" 3이면 "삼" 4면 "사" 
	    int number =1;
	    if(number ==1) {
	    	System.out.println("일");
	    }
	    if(number=2) {
	    	System.out.println("이");
	    }
	    if(number=3) {
	    	System.out.println("삼");
	    }
	    
	    
	    //복합 if문은 if ~ else if 쓰는 것
	    // 앞에서 참이면 아래의 조건은 미수행
	    if(number ==1) {
	    	System.out.println("일");
	    }else if (number==2) {
	    	System.out.println("이");
	    }else if (number==3) {
	    	System.out.println("삼");
	    };
	    
	}

}
