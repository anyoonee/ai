package javaBasic3.ch06.sec14;

import java.util.Scanner;

//Account 콟이쫔 쎂쟕
public class BankApplication {
	
	Scanner sc = new Scanner(System.in);
    Account[] accounts = new Account[100];
    static int count = 0; //썯촥쨬 캶羚
	
	public void 썯촥쨬() {
		// TODO Auto-generated method stub
		accounts[count ++] = new Account();
		System.out.println("-------------------");
		System.out.println("      썯촥 쨬     ");
		System.out.println("-------------------");
		System.out.println("썯촥좾탺 : ");
		accounts[count].썯촥좾탺 = sc.next();
		System.out.println("썯촥촸 : ");
		accounts[count].썯촥촸 = sc.next();
		System.out.println("퉘舅쐏쮕 : ");
		accounts[count].퉘舅쐏쮕 = sc.nextInt();
		System.out.println("써쎀 : 썯촥쌰 쨬왆쮴챲핎. ");
		count = count + 1;
		
	}

	public void 썯촥점() {
		// TODO Auto-generated method stub
		System.out.println("-------------------");
		System.out.println("      썯촥 점     ");
		System.out.println("-------------------");
		for(int i=0; i<count; i++) {
			System.out.println(accounts[i].get썯촥좾탺() + " "+ accounts[i].get썯촥촸() + " " + accounts[i].get첖썴());
			
		}
		
	}

	public void 찣쐏() {
		// TODO Auto-generated method stub
		System.out.println("-------------------");
		System.out.println("       찣  쐏      ");
		System.out.println("-------------------");
		System.out.println(" 썯촥좾탺");
		String 찣쐏쮕 = sc.next();//턂쐕 쌼첔좣 썯촥첉쵔 턅첉핌
		
	}

	public void 歐() {
		// TODO Auto-generated method stub
		
	}

	
	//썯촥 쨬
	
	//썯촥 점
	
	//찣쐏
	
	//歐
	
}
