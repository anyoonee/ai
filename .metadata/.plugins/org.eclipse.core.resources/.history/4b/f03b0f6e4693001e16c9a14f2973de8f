package javaBasic1204.ch04.sec01;

public class While문 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		// 반복문
		// 형식 while(조건) { 참이면 수행할문장}
		// 1~100출력하기
		/*
		int a=1;
		System.out.println(a);
		
		while(a<100) {
		a++;
		System.out.println(a);
		}
		
		
		// 10,20,30...100
		
		int b=10;
		System.out.println(b);
		
		while(b<100) {
			b += 10;
			System.out.println(b);
		}
		*/
		// 100 90 80 ... -20
		int c=100;
		System.out.println(c);
		
		while (c>-20) {
			c -= 10;
			System.out.println(c);
		}
		
		
		// 5배수 빼고 찍기 1~20
		
		int d=0;
		System.out.println(d);
		
		while (d<20) {
			d++;
			if(d % 5 !=0) {
					System.out.println(d);
			} else {continue;}	
		}
		
		// 1~100 합
		int e = 1;
		int sum = 0;
		while(e<=100) {
			e++;
			sum += e;
			System.out.println(sum);
			
		} 	
		
		
		int f = 1;
		int sum1 = 0;
		while(e<=100) {
			f++;
			sum1 += f;
			if (sum1 >=3000) break;
		
	}System.out.println(f+" " + sum1);
	
	
	}
}
