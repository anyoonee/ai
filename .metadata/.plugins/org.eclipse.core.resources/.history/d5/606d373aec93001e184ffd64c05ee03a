package javaBasic1204.ch04.sec02;

import java.util.Scanner;

public class WeekExample {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc = new Scanner(System.in);
		System.out.println("성적 확인 프로그램");
		System.out.println("메뉴를 입력하시오.");
		String menu = sc.nextLine();
		String name = null;
		int score =0 ;
		
		while( !menu.equals("4")) {
			System.out.println("-----------------------------------");
			System.out.println("1.학생명  | 2. 점수  | 3. 출력  | 4. 종료");
			System.out.println("-----------------------------------");
			System.out.print("선택> :");
			menu=sc.nextLine();
			
			switch(menu) {
			case "1" : System.out.println("학생명은>");
			           name =sc.nextLine();
			           
			           break;
			case "2" : System.out.println("점수는>");
			           score=sc.nextInt();
					 break;
			
			case "3" : System.out.println("출력>" + name + score);
			         break;
			case "4" : System.out.println("프로그램 종료!");
		             break;
	        default : System.out.println("1~4번까지만 입력하시오.다시.");         
			         
			}
			
			
		}
		
		
	}

}
